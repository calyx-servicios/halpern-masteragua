<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_dispatcher_form" model="ir.ui.view">
        <field name="name">purchase.dispatcher.form</field>
        <field name="model">purchase.dispatcher</field>
        <field name="arch" type="xml">
            <form string="Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="purchase_dispatcher_list" model="ir.ui.view">
        <field name="name">purchase.dispatcher.list</field>
        <field name="model">purchase.dispatcher</field>
        <field name="arch" type="xml">
            <tree string="Dispatchers">
                <field name="name"/>
                <field name="address"/>
                <field name="email"/>
                <field name="phone"/>
            </tree>
        </field>
    </record>
    <record id="purchase_dispatcher_search" model="ir.ui.view">
        <field name="name">purchase.dispatcher.search</field>
        <field name="model">purchase.dispatcher</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="address"/>
                <field name="email"/>
                <field name="phone"/>
            </search>
        </field>
    </record>
</odoo>