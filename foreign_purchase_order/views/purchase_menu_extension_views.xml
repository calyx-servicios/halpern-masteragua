<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dispatcher_list_action" model="ir.actions.act_window" >
        <field name="name">Dispatcher</field>
        <field name="res_model">purchase.dispatcher</field>
        <field name="view_mode">tree,form</field>
        <field name = "help" type='html'>
            <p class ='o_view_nocontent_smiling_face'>
                Create the first Dispatcher Record
            </p>
        </field>
    </record>

    <record id="booking_list_action" model="ir.actions.act_window">
        <field name="name">Booking</field>
        <field name="res_model">purchase.booking</field>
        <field name="view_mode">tree,form</field>
        <field name = "help" type='html'>
            <p class ='o_view_nocontent_smiling_face'>
                Create the first Booking Record
            </p>
        </field>
    </record>
    <record id="channel_list_action" model="ir.actions.act_window">
        <field name="name">Channels</field>
        <field name="res_model">purchase.channel</field>
        <field name="view_mode">tree,form</field>
        <field name = "help" type='html'>
            <p class ='o_view_nocontent_smiling_face'>
                Create the first Channel Record
            </p>
        </field>
    </record>

    <menuitem id="conf_dispatcher" 
                name ="Dispatchers" 
                parent="purchase.menu_purchase_config" 
                sequence="2"
                action="dispatcher_list_action"/>
    
    <menuitem id="conf_booking"
            name="Transportations Means"
            parent="purchase.menu_purchase_config"
            sequence="3"
            action="booking_list_action"/>
        
    <menuitem id="conf_channel"
            name="Channels"
            parent="purchase.menu_purchase_config"
            sequence="4"
            action="channel_list_action"/>

</odoo>