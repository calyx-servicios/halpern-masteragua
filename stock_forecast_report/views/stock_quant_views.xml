<odoo>
    <data>
        <record id="view_stock_quant_tree_inherit" model="ir.ui.view">
            <field name="name">stock.quant.tree</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="quantity_on_hand" string="SM" width="10"/>
                    <field name="open_sales_orders" width="10"/>
                    <field name="open_purchase_orders" width="10"/>
                    <field name="lead_time" width="10"/>
                    <field name="purchase_request" width="10"/>
                    <field name="open_sales_orders"/>
                    <field name="open_purchase_orders"/>
                    <field name="lead_time"/>
                    <field name="purchase_request"/>
                    <field name="quantity" string="Planned Quantity"/>
                    <field name="company_id"/>
                    <!-- <field name="total"/> -->
                </xpath>
                <xpath expr="//field[@name='location_id']" position="replace">
                    <field name="location_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='reserved_quantity']" position="replace">
                    <field name="reserved_quantity" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='lot_id']" position="replace">
                    <field name="lot_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='inventory_quantity']" position="replace">
                    <field name="inventory_quantity" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="replace">
                    <field name="product_uom_id" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='value']" position="replace">
                    <field name="value" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="total"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo> 
