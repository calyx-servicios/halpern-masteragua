<odoo>
    <record id="view_stock_quant_tree_inherit" model="ir.ui.view">
        <field name="name">stock.quant.tree</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="quantity" string="SM"/>
                <field name="open_sales_orders"/>
                <field name="open_purchase_orders"/>
                <field name="lead_time"/>
                <field name="purchase_request"/>
                <field name="planned_quantity"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='reserved_quantity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='lot_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='inventory_quantity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='value']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="total"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_search_inherit" model="ir.ui.view">
        <field name="name">stock.quant.search</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <search>
                <filter string="Analytic Account" name="analytic" context="{'group_by':'analytic_account_id'}" groups="analytic.group_analytic_accounting"/>
            </search>
        </field>
    </record>
</odoo> 
